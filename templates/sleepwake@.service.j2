[Unit]
Description=Ellucian Banner SleepWake - %I
After=network.target

[Service]
Type=forking
User={{ banner_jobsub_user }}
WorkingDirectory={{ banner_jobsub_home }}/logs
Environment=ECKERD_HOME={{ eckerd_jobsub_home }}
ExecStart={{ eckerd_jobsub_home }}/util/bash/sleepwake.sh start %i
ExecStop={{ eckerd_jobsub_home }}/util/bash/sleepwake.sh stop %i
Restart=always

[Install]
WantedBy=multi-user.target
